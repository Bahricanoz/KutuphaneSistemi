@using KutuphaneSistemi.Models.Entitiy
@model List<Tbl_Kitap>
@{
    ViewBag.Title = "Kitaplar";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:20px;">
    <h3 style="color:slateblue">@ViewBag.ad</h3>
</div>
<table class="table table-hover">
    <tr style="background-color: rgb(252,178,22)">
        <th>Kitap Ad</th>
        <th>Kategori</th>
        <th>Yayınevi</th>
        <th>Basım Yılı</th>
        <th>Sayfa Sayısı</th>
        <th>Kitap Hakkında</th>
    </tr>
    <tbody>
        @foreach(var x in Model)
            {
                <tr>
                    <td>@x.Kitapad</td>
                    <td>@x.Tbl_Kategori.KategoriAd</td>
                    <td>@x.Yayinevi</td>
                    <td>@x.Basyımyılı</td>
                    <td>@x.Sayfasayisi</td>
                    <td>@x.Detay</td>
                    
                </tr>
            }
    </tbody>
</table>
