
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kütüphane Sistemi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 270px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 275px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/istatistik/Index/"><i class="glyphicon glyphicon-home"></i> Ana Sayfa</a>
        <a href="/Hakkımızda/Index/"><i class="glyphicon glyphicon-asterisk"></i> Hakkımızda</a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list"></i> Kategoriler</a>
        <a href="/Yazar/Index/"><i class="glyphicon glyphicon-pencil"></i> Yazarlar</a>
        <a href="/Kitap/Index/"><i class="glyphicon glyphicon-book"></i> Kitaplar</a>
        <a href="/Uye/Index/"><i class="glyphicon glyphicon-user"></i> Üyeler</a>
        <a href="/Personel/Index/"><i class="glyphicon glyphicon-tower"></i> Personeller</a>
        @if (User.IsInRole("A"))
        {
            <a href="/OduncKitap/Kitapver/"><i class="glyphicon glyphicon-arrow-right"></i> Ödünç Kitap Ver</a>
            <a href="/OduncKitapAl/Index/"><i class="glyphicon glyphicon-arrow-left"></i> Ödünç Kitap Al</a>
        }
        <a href="/istatistik/Sorgular/"><i class="glyphicon glyphicon-sort"></i> İstatiskler</a>
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-road"></i> Vitrin</a>
        <a href="/istatistik/Havakartı/"><i class="glyphicon glyphicon-cloud"></i> Hava Raporu</a>
        <a href="/islemler/Index/"><i class="glyphicon glyphicon-dashboard"></i> İşlemler</a>
        <a href="/istatistik/Galeri/"><i class="glyphicon glyphicon-picture"></i> Galeri</a>
        <a href="/Mesaj/Index/"><i class="glyphicon glyphicon-comment"></i> Mesajlar</a>
        <a href="/Mesaj/Gonder/"><i class="glyphicon glyphicon-calendar"></i> Mesaj Gönder</a>
        <a href="/Duyurular/Index/"><i class="glyphicon glyphicon-phone"></i> Duyurular</a>
        @if (User.IsInRole("A"))
        {
            <a href="/Ayarlar/Index/"><i class="glyphicon glyphicon-cog"></i> Ayarlar</a>
        }
        <a href="/Login/AdminCikisyap/"><i class="glyphicon glyphicon-remove-circle"></i> Çıkış Yap</a>





    </div>

    <div class="main">
       @RenderBody()
    </div>

</body>
</html>
