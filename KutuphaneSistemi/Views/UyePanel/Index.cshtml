@model KutuphaneSistemi.Models.Entitiy.Tbl_Uye
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UyeLayout.cshtml";
}

<div style="margin:20px 0px;">
    <h4 style="color: lightseagreen"><i>Üye Profil</i></h4>
</div>
@using (Html.BeginForm("Index", "UyePanel", FormMethod.Post)) { 
    <table class="table table-hover">
        <tr>
            <td><label style="font-weight:bolder;">Id:</label></td>
            <td>

                @Session["Id"].ToString()

            </td>
        </tr>
        <tr>
            <td><label style="font-weight:bolder;">Ad:</label></td>
            <td>

                @Session["Ad"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder;">Soyad:</label>
            </td>
            <td>


                @Session["Soyad"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder;">Kullanıcı Adı:</label>
            </td>
            <td>

                @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder;">Mail:</label>
            </td>
            <td>
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })

            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder;">Telefon:</label>
            </td>
            <td>

                @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder;">Okul:</label>
            </td>
            <td>

                @Html.TextBoxFor(x => x.Okul, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder;">Yaş:</label>
            </td>
            <td>

                @Html.TextBoxFor(x => x.Yas, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <label style="font-weight:bolder;">Şifre:</label>
            </td>
            <td>
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Şifre Güncelle</button>
            </td>
        </tr>
    </table>
}
