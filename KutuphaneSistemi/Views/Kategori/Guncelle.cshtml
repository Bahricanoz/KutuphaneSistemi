@model KutuphaneSistemi.Models.Entitiy.Tbl_Kategori
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:20px;">
    <h3>Kategori Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div style="margin-top:20px;">
        <label>Kategori Id:</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Kategori Ad:</label>
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KategoriAd, "", new { @style = "color:red;" })
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-success">Kategori Güncelle</button>
    </div>

}
