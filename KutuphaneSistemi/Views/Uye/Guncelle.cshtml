@model KutuphaneSistemi.Models.Entitiy.Tbl_Uye
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:20px;">
    <h3>Üye Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("Guncelle", "Uye", FormMethod.Post))
{
    <div style="margin-top:20px;">
        <label>Id:</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Ad:</label>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Ad, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <label>Soyad:</label>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Soyad, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <label>Mail:</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Mail, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <label>Telefon:</label>
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Telefon, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <label>Yaş:</label>
        @Html.TextBoxFor(x => x.Yas, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Yas, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <label>Okul:</label>
        @Html.TextBoxFor(x => x.Okul, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Okul, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <label>Kullancı Adı:</label>
        @Html.TextBoxFor(x => x.Kullaniciadi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Kullaniciadi, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <label>Şifre:</label>
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Sifre, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-success">Üye Güncelle</button>
    </div>
}